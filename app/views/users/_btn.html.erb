<% if (user != current_user)  %>
  <% if current_user.following?(user) %>
  <%= link_to 'フォローを外す',user_relationships_path(user), method: :delete, class: options[:class].presence || "btn btn-info mb-3" %>
  <% else %>
  <%= link_to 'フォローする',user_relationships_path(user), method: :post, class: options[:class].presence || "btn btn-success mb-3" %>
  <% end %>
<% end %>