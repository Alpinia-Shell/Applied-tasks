<% book.comments.each do |comment| %>
  <div class="col-md-4">
    <%= link_to user_path(comment.user) do %>
    <%= image_tag comment.user.get_profile_image, size:"100x100" %> 
      <p><%= comment.user.name %></p>
    <% end %>
  </div>
  <div class="col-md-4"><%= comment.comment %></div>
  
  <div class="col-md-4">
    <% if comment.user == current_user %>
      <%= link_to 'Destroy', book_comment_path(comment.book,comment), method: :delete, data:{confirm:"本当に削除しますか？"},class:"btn btn-danger",remote: true %>
    <% end %>
  </div>
<% end %>